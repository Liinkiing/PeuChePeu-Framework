{% extends('layout.twig') %}

{% block content %}

    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">Se connecter</div>
                <div class="card-block">
                    <form action="{{ path_for('auth.login') }}" method="post">
                        {{ csrf_input() }}
                        {% include 'shared/input.twig' with {key: 'username', label: "Nom d'utilisateur"} %}
                        {% include 'shared/input.twig' with {key: 'password', label: "Mot de passe", type: 'password'} %}
                        <input type="hidden" name="redirect" value="{{ redirect }}">
                        <button class="btn btn-primary">Se connecter</button>
                    </form>
                </div>
            </div>
        </div>
        {% if has_module('registration') %}
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">S'inscrire</div>
                <div class="card-block">
                    <form action="#" class="from">
                        <div class="form-group">
                            <label for="username">Nom d'utilisateur</label>
                            <input type="text" id="username" name="username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" id="password" class="form-control">
                        </div>
                        <button class="btn btn-primary">S'inscrire</button>
                    </form>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

{% endblock %}